@model Esmart.Permission.Application.Models.ControlModel.FunctionModel


<form class="form-horizontal" id="functionForm">
    <div class="form-group">
        <label for="FunctionKey" class="col-md-2 control-label">关键字：</label>
        <div class="col-md-6">
            @Html.TextBox("FunctionKey", null, null, new { type = "text", @class = "form-control validate[required] maxSize[30]" })
        </div>
    </div>
    <div class="form-group">
        <label for="FunctionName" class="col-md-2 control-label">功能名称：</label>
        <div class="col-md-6">
            @Html.TextBox("FunctionName", null, null, new { type = "text", @class = "form-control validate[required] maxSize[30]" })
        </div>
    </div>
    <div class="form-group">
        <label for="Remark" class="col-md-2 control-label">备注：</label>
        <div class="col-md-9">
            @Html.TextArea("Remark", new { @class = "form-control  validate[maxSize[250]]", rows = "6" })
        </div>
    </div>

</form>
<script>
    $('#functionForm').tpoAttachValidate();
</script>