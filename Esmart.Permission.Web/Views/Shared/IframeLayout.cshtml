@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="renderer" content="webkit">
    <title>@ViewBag.Title</title>
    <link href="~/Content/img/favicon.ico" rel="shortcut icon" media="screen" />
    @Styles.Render("~/Content/Main")
   

</head>
<body class="white-bg color-dark margin-0">
    <div id="layout_alert_submit" class="alert  alert-danger alert-dismissible" role="alert" style="display: none; position: fixed;height:45px; right: 0; top:0px; z-index:9999">
        <button type="button" class="close" onclick="$(this).parent('div').hide()"><span>&times;</span></button>
        <p></p>
    </div>
    <div id="layout_progress_submit" class="progress" style="display: none; position: fixed;  right: 10px; top: 0px; z-index: 9999; ">
        <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:1%;line-height:50px;">
        </div>
    </div>
    @Scripts.Render("~/bundles/script")
   

    <div @*style="overflow-y:auto; overflow-x:hidden"*@ id="content-wrapper">
        @RenderBody()


    </div>

    @if (Request.QueryString["showIframeModel"] == null)
    {
        <script type="text/javascript">


            $("#content-wrapper").height($(window).height() - 30);
            $(window).resize(function () {
                //window.pubResize();
            });

            window.pubResize = function () {
                $("#content-wrapper").height($(window).height() - 30);
            }


        </script>
    }


</body>
</html>
