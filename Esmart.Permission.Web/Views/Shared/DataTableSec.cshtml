@model Esmart.Permission.Web.Models.Common.DataTableSource

@{
    if (@Request.IsAjaxRequest())
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/Shared/IframeLayout.cshtml";
    }
}
<link href="~/Content/css/style.css" rel="stylesheet" />
<script>
    pageGlobal = {dataUrl:"@Model.Url",count:@Model.Count,searchUrl:"@Model.SearchUrl"};
</script>
<div class="panel panel-default">
    <div class="panel-heading">
        <a data-toggle="collapse" href="#search_par_panel_body_master">
            <h5 class="panel-title">
                <i class="fa fa-unsorted fa-fw"></i>
                查询选项
            </h5>
        </a>
    </div>
    <div class="panel-collapse collapse in" id="search_par_panel_body_master">
        <div id="data_search_info" class="panel-body  row">
            @if (IsSectionDefined("SearchPar"))
            {
                @RenderSection("SearchPar", false)
            }
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <a data-toggle="collapse" href="#search_par_panel_body_table">
            <h5 class="panel-title">
                <i class="fa fa-unsorted fa-fw"></i>
                数据列表
            </h5>
        </a>
    </div>
    <div class="panel-collapse collapse in" id="search_par_panel_body_table">
        <div id="data_list_info" class="panel-body  row">
            @*table*@
            <div class="col-lg-12 col-md-12 mt10">
                <div class="col-lg-12 col-md-12 mb10">
                    <form class="form-inline">
                        @if (IsSectionDefined("SearchPageIndex"))
                        {
                            @RenderSection("SearchPageIndex", false)
                        }
                        else
                        {
                            <div class="form-group" style="float:left">
                                <div class="input-group">
                                    <input type="text" value="10" id="data_page_size" class="form-control" style="z-index:0" onkeydown="return dataPage.GotoSize(this)" placeholder="请输入要显示多少条记录" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            显示条数
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu right" aria-labelledby="dLabel">
                                            <li><a style="cursor:pointer" onclick="dataPage.GotoSize(10)">每页显示10条</a> </li>
                                            <li><a style="cursor:pointer" onclick="dataPage.GotoSize(20)">每页显示20条</a></li>
                                            <li><a style="cursor:pointer" onclick="dataPage.GotoSize(40)">每页显示40条</a></li>
                                            <li><a style="cursor:pointer" onclick="dataPage.GotoSize(80)">每页显示80条</a></li>
                                            <li><a style="cursor:pointer" onclick="dataPage.GotoSize(100)">每页显示100条</a></li>
                                        </ul>
                                    </span>


                                </div>
                            </div>
                        }

                    </form>
                </div>
                <div class="col-lg-12 col-md-12" id="data_body_info" style="min-height:500px; ">
                    @RenderBody()
                </div>

            </div>

            <div class="col-lg-12 col-md-12" id="data_Pagin_foot">

            </div>
            @*table*@
        </div>
    </div>
</div>


<script src="~/Scripts/datatable.js"></script>




